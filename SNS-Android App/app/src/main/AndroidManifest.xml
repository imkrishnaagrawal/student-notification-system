<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codingstrings.sns">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.codingstrings.sns.screens.SplashScreenActivity"
            android:label="SNS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.codingstrings.sns.screens.LoginActivity"
            android:label="SNS" />
        <activity
            android:name="com.codingstrings.sns.screens.RegisterActivity"
            android:label="@string/app_register" />
        <activity
            android:name="com.codingstrings.sns.screens.AssignmentActivity"
            android:label="Assignments" />
        <activity
            android:name="com.codingstrings.sns.screens.WriteUpsActivity"
            android:label="WriteUp" />
        <activity
            android:name="com.codingstrings.sns.screens.PdfActivity"
            android:label="PdfView" />
        <activity
            android:name="com.codingstrings.sns.screens.NoticeActivity"
            android:label="Notice" />
        <activity
            android:name="com.codingstrings.sns.screens.HomeActivity"
            android:label="@string/title_activity_home2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.codingstrings.sns.screens.CreditsActivity"></activity>
    </application>

</manifest>